<body>
<div id="container"></div> 
<script> 
       var map = new BMap.Map("container");          // 创建地图实例  
       var point = new BMap.Point(122.442021,41.394986);  // 创建点坐标  
       map.centerAndZoom(point, 19);                 // 初始化地图，设置中心点坐标和地图级别
       var marker = new BMap.Marker(point);          // 创建标注
       map.addOverlay(marker);                       // 将标注添加到地图中
       marker.setAnimation(BMAP_ANIMATION_BOUNCE);   //跳动的动画                    


var opts = {anchor:BMAP_ANCHOR_TOP_RIGHT} 
map.addControl(new BMap.NavigationControl(opts));
map.addControl(new BMap.ScaleControl());  
map.addControl(new BMap.OverviewMapControl()); 
map.enableScrollWheelZoom(); 
map.enableContinuousZoom();
map.setCurrentCity("台安"); // 仅当设置城市信息时，MapTypeControl的切换功能才能可用  
var local = new BMap.LocalSearch(map, {
  renderOptions:{map: map}
});
local.search("");
var cr = new BMap.CopyrightControl({anchor: BMAP_ANCHOR_TOP_LEFT});   //设置版权控件位置
map.addControl(cr); //添加版权控件

var bs = map.getBounds();   //返回地图可视区域
cr.addCopyright({id: 1, content: "<a href='/fei/' style='font-size:20px;text-decoration:none;'><div style='width:60px;height:30px;line-height:30px;text-align:center;color:#9A2C0A;background:#F2DDC7;border:solid #D05432 1px;'>返回</div></a>", bounds: bs});    //Copyright(id,content,bounds)类作为CopyrightControl.addCopyright()方法的参数

</script> 
</body>
